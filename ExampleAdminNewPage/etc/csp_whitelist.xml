<?xml version = "1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp/etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="jquery" type="host">https://code.jquery.com"</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="tailwind" type="host">https://cdn.tailwindcss.com</value>
            </values>
        </policy>

    </policies>
</csp_whitelist>